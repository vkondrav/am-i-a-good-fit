{
  "manifest_version": 3,
  "name": "Am I a Good Fit?",
  "version": "1.0",
  "description": "Inline analysis of job description and your resume",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*"
      ],
      "js": [
        "data.js",
        "button.js",
        "modal.js",
        "ai.js",
        "ai-openai.js",
        "ai-google.js",
        "ai-ant.js",
        "content-linkedin.js"
      ]
    },
    {
      "matches": [
        "*://*.indeed.com/*"
      ],
      "js": [
        "data.js",
        "button.js",
        "modal.js",
        "ai.js",
        "content-indeed.js"
      ]
    },
    {
      "matches": [
        "*://*.monster.com/*",
        "*://*.monster.ca/*"
      ],
      "js": [
        "data.js",
        "button.js",
        "modal.js",
        "ai.js",
        "content-monster.js"
      ]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}